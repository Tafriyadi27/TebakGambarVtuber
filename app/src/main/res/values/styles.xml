<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="submitbutton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/digital_gothic_normal</item>
        <item name="android:background">@drawable/bg_button_submitbutton</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="menubutton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_menubutton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="levelbutton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_levelbutton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
